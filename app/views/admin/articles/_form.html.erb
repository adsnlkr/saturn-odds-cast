<%= form_with(model: [ :admin, article ]) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.textarea :description %>
  </div>

  <div>
    <%= form.label :cover_image, style: "display: block" %>
    <%= form.file_field :cover_image %>
  </div>
  
  <% if article.persisted? %>
    <div>
      <% case article.status %>
        <% when "waiting_for_review" %>
          <div>
            <%= radio_button_tag :status, "published", article.status == "published" %> Approve
            <%= radio_button_tag :status, "draft", article.status == "draft" %> Reject
          </div>
          <div>
            <%= button_to "Update", [ :admin, article ], method: :put, class: "btn btn-success" %>
          </div>
        <% when "draft" %>
          <%= button_to "Review", [ :admin, article ], params: { status: "waiting_for_review" }, method: :put, class: "btn btn-success" %>
        <% when "published" %>
          <%= button_to "Cancel", [ :admin, article ], params: { status: "draft" }, method: :put, class: "btn btn-danger" %>
      <% end %>
    </div>
  <% end %>
<% end %>
