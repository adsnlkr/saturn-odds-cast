<p style="color: green"><%= notice %></p>

<% content_for :title, "Articles" %>

<h1>Articles</h1>

<div style="margin-bottom: 10px">
<%= link_to "+", new_admin_article_path, style: "border: 1px solid black; padding: 4px; text-decoration: none;" %>
</div>


<div id="admin_articles">
  <% @articles.each do |article| %>
    <%= render article %>
    <p>
      <%= link_to "Show this article", [ :admin, article ] %>
    </p>
  <% end %>
</div>